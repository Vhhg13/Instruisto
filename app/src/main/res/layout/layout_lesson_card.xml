<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lesson_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_lesson_number_1"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:layout_margin="@dimen/big_margin"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/practice_card"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardBackgroundColor="?colorSurface"
        android:clickable="true">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:padding="@dimen/medium_margin"/>

        <View
            android:id="@+id/colorView"
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height"
            android:background="?colorPrimaryContainer"
            android:layout_gravity="end|center_vertical"
            />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/grammar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginHorizontal="@dimen/big_margin"
        style="@style/Widget.Material3.CardView.Elevated"
        app:cardBackgroundColor="?colorSurface"
        android:clickable="true">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:padding="@dimen/medium_margin"/>

        <View
            android:id="@+id/colorView2"
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height"
            android:background="?colorTertiaryContainer"
            android:layout_gravity="end|center_vertical"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"/>
</LinearLayout>