<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lesson.LessonActivity"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include"
        layout="@layout/layout_audio_exercise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2"
        app:layout_constraintBottom_toBottomOf="@+id/guide"/>

    <include
        android:id="@+id/include2"
        layout="@layout/layout_translate_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    <include
        android:id="@+id/include3"
        layout="@layout/layout_substitute_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.20"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide"
        app:layout_constraintBottom_toTopOf="@+id/topbarrier"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="start|top"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/topbarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="msg_wrong,msg_correct,correct_answer"
        app:barrierDirection="top"/>

    <TextView
        android:id="@+id/msg_correct"
        style="@style/TextAppearance.Material3.DisplaySmall"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word_correct"
        android:textColor="?colorPrimary"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/topbarrier"
        app:layout_constraintBottom_toTopOf="@id/botbarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/msg_wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.DisplaySmall"

        android:text="@string/word_incorrect"
        android:visibility="gone"
        android:textColor="?colorError"
        android:layout_marginBottom="16dp"

        app:layout_constraintTop_toBottomOf="@id/topbarrier"
        app:layout_constraintBottom_toTopOf="@id/correct_answer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/correct_answer"
        style="@style/TextAppearance.Material3.HeadlineSmall"
        android:visibility="gone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_correct_answer"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botbarrier"
        app:layout_constraintTop_toBottomOf="@+id/msg_wrong"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/botbarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="correct_answer,msg_correct,msg_wrong"
        app:barrierDirection="bottom"/>

    <Button
        android:id="@+id/grm"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?colorPrimaryContainer"
        android:textColor="?colorOnPrimaryContainer"
        android:text="@string/word_grammar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botbarrier" />

    <Button
        android:id="@+id/next"
        style="@style/Widget.Material3.Button.IconButton.Filled"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grm"
        app:layout_constraintBottom_toBottomOf="@+id/grm"
        app:icon="@drawable/navigate_next_24px"/>

</androidx.constraintlayout.widget.ConstraintLayout>